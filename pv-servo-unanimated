@@ -176,16 +177,23 @@ where
     fn write_char(&mut self, c: char) -> fmt::Result {
         if let Some(prefix) = self.prefix.take() {
             self.writer.write_str(prefix)?;
         }
         self.writer.write_char(c)
     }
 }
 
+impl ToCss for Atom {
+    #[inline]
+    fn to_css<W>(&self, dest: &mut W) -> fmt::Result where W: fmt::Write {
+        (**self).to_css(dest)
+    }
